<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGuiaDev.Views.ComponentesSegundo"
             BackgroundColor="#1C1C1C"
             Title="Disciplinas do Segundo Módulo">
    <ContentPage.Content>

        <ScrollView>
            <StackLayout VerticalOptions="CenterAndExpand" Padding="10" >

                <Button Text="Inglês Instrumental " Clicked="Button_Clicked" Style="{ StaticResource botaoCinza }" />
                <Button Text="Desenvolvimento de Sistemas " Clicked="Button_Clicked_1" Style="{ StaticResource botaoCinza }" />
                <Button Text="Banco de Dados II " Clicked="Button_Clicked_2" Style="{ StaticResource botaoCinza }" />
                <Button Text="Internet e Protocolos " Clicked="Button_Clicked_3" Style="{ StaticResource botaoCinza }" />
                <Button Text="Programação de Aplicativos Mobile I" Clicked="Button_Clicked_4" Style="{ StaticResource botaoCinza }" />
                <Button Text="Progamação Web II" Clicked="Button_Clicked_5" Style="{ StaticResource botaoCinza }" />
                <Button Text="Trabalho de Conclusão de Curso (TCC)" Clicked="Button_Clicked_6" Style="{ StaticResource botaoCinza }" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>